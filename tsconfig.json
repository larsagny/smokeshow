{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "@types/react"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./react/*.ts",
    "./react/react.d.ts"
  ],
  "exclude": ["node_modules/", "dist/"]
}
